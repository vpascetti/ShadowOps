
# Backend port
PORT=5050

# Data provider selection (stub|iqms|db)
DATA_PROVIDER=iqms

# IQMS connector selection (oracle uses Instant Client)
IQMS_CONNECTOR=oracle

# IQMS Oracle connection
IQMS_HOST=localhost
IQMS_PORT=1521
IQMS_SERVICE=IQMS
IQMS_TNS_ALIAS=
IQMS_CONNECT_STRING=localhost:1521/IQMS
TNS_ADMIN=/opt/oracle/instantclient_21_13/network/admin
LD_LIBRARY_PATH=/opt/oracle/instantclient_21_13
IQMS_USER=IQMS
IQMS_PASSWORD=iqms

# IQMS SQL (return canonical columns)
# Use iqms_jobs_fast.sql for better performance (skips expensive material calculations)
# Use iqms_jobs.sql for full details including material shortage breakdown
IQMS_SQL_JOBS_FILE=./sql/iqms_jobs_fast.sql
IQMS_SQL_JOB_DETAIL_FILE=./sql/iqms_job_detail.sql
IQMS_SQL_OPERATIONS_FILE=./sql/iqms_operations.sql
IQMS_SQL_RESOURCES_FILE=./sql/iqms_resources.sql
IQMS_SQL_MATERIALS_FILE=./sql/iqms_materials.sql
IQMS_SQL_JOB_MATERIALS_DETAIL_FILE=./sql/iqms_job_materials_detail.sql
IQMS_SQL_REALTIME_PART_NUMBERS_FILE=./sql/iqms_realtime_part_numbers.sql

# Cache TTL in seconds (how long to cache query results)
# Set to 0 to disable caching
IQMS_CACHE_TTL_SECONDS=90

# Postgres connection (used by DATABASE_URL)
PGHOST=localhost
PGPORT=5432
PGUSER=shadowops
PGPASSWORD=shadowops_pass
PGDATABASE=shadowops_db

# Full DB URL (used by some tools)
DATABASE_URL=postgres://shadowops:shadowops_pass@localhost:5432/shadowops_db

# Token salt for hashing (change in production)
TOKEN_SALT=changeme-dev-salt
